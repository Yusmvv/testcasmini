    <script>
        // –õ–æ–≥–∏–∫–∞ –∫–æ–Ω—Å—Ç—Ä—É–∫—Ç–æ—Ä–∞
        const steps = {
            1: { completed: false, selected: null },
            2: { completed: false, selected: null },
            3: { completed: false, selected: null }
        };

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ –æ–ø—Ü–∏–π
        document.querySelectorAll('.option-card, .game-option').forEach(option => {
            option.addEventListener('click', function() {
                const stepNumber = parseInt(this.getAttribute('data-step'));
                
                // –°–Ω–∏–º–∞–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Å–æ –≤—Å–µ—Ö –æ–ø—Ü–∏–π –≤ —ç—Ç–æ–º —à–∞–≥–µ
                const parent = this.closest('.step');
                parent.querySelectorAll('.option-card, .game-option').forEach(opt => {
                    opt.classList.remove('active');
                });
                
                // –î–æ–±–∞–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å –∫ –≤—ã–±—Ä–∞–Ω–Ω–æ–π –æ–ø—Ü–∏–∏
                this.classList.add('active');
                
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ —à–∞–≥–∞
                steps[stepNumber].completed = true;
                steps[stepNumber].selected = this;
                
                // –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —Å–ª–µ–¥—É—é—â–∏–π —à–∞–≥
                if (stepNumber < 3) {
                    const nextStep = document.getElementById(`step${stepNumber + 1}`);
                    nextStep.classList.remove('disabled');
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –Ω–æ–º–µ—Ä —à–∞–≥–∞
                    const stepNumberEl = nextStep.querySelector('.step-number');
                    stepNumberEl.classList.add('active');
                }
                
                // –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ–¥—Å–∫–∞–∑–∫—É –¥–ª—è –∏–≥—Ä
                if (stepNumber === 3) {
                    const gameName = this.querySelector('.game-label').textContent;
                    document.getElementById('gameHint').textContent = `–ü–æ–¥–±–∏—Ä–∞–µ–º –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏—è, –≥–¥–µ –ª—É—á—à–∏–µ —É—Å–ª–æ–≤–∏—è –∏–º–µ–Ω–Ω–æ –¥–ª—è ${gameName.toLowerCase()}`;
                }
                
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –º–æ–∂–Ω–æ –ª–∏ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å –∫–Ω–æ–ø–∫—É
                checkFindButton();
            });
        });
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ –¥–µ–ø–æ–∑–∏—Ç–∞
        const depositSlider = document.getElementById('depositSlider');
        const depositValues = document.querySelectorAll('.deposit-value');
        const depositHint = document.getElementById('depositHint');
        
        depositSlider.addEventListener('input', function() {
            const value = this.value;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å –¥–ª—è –∑–Ω–∞—á–µ–Ω–∏–π –¥–µ–ø–æ–∑–∏—Ç–∞
            depositValues.forEach((el, index) => {
                if (index == value) {
                    el.classList.add('active');
                } else {
                    el.classList.remove('active');
                }
            });
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –ø–æ–¥—Å–∫–∞–∑–∫—É
            const hints = [
                "–î–ª—è –±–µ–∑–¥–µ–ø–æ–∑–∏—Ç–Ω—ã—Ö –±–æ–Ω—É—Å–æ–≤ –º—ã –Ω–∞—à–ª–∏ 7 —Å–ø–µ—Ü–∏–∞–ª—å–Ω—ã—Ö –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏–π",
                "–ü—Ä–∏ —Å—É–º–º–µ 500 —Ä—É–± –¥–æ—Å—Ç—É–ø–Ω–æ 9 –≤—ã–≥–æ–¥–Ω—ã—Ö –±–æ–Ω—É—Å–æ–≤",
                "–ü—Ä–∏ —Å—É–º–º–µ 1000 —Ä—É–± –º—ã –Ω–∞—à–ª–∏ 12 –æ—Å–æ–±–æ –≤—ã–≥–æ–¥–Ω—ã—Ö –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–∏–π",
                "–î–ª—è –ø—Ä–µ–º–∏–∞–ª—å–Ω—ã—Ö –∏–≥—Ä–æ–∫–æ–≤ –¥–æ—Å—Ç—É–ø–Ω—ã —ç–∫—Å–∫–ª—é–∑–∏–≤–Ω—ã–µ —É—Å–ª–æ–≤–∏—è"
            ];
            
            depositHint.textContent = hints[value];
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ —à–∞–≥–∞
            steps[2].completed = true;
            
            // –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —Å–ª–µ–¥—É—é—â–∏–π —à–∞–≥
            if (steps[1].completed && steps[2].completed) {
                const step3 = document.getElementById('step3');
                step3.classList.remove('disabled');
                step3.querySelector('.step-number').classList.add('active');
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –º–æ–∂–Ω–æ –ª–∏ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å –∫–Ω–æ–ø–∫—É
            checkFindButton();
        });
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–ª–∏–∫–æ–≤ –ø–æ –∑–Ω–∞—á–µ–Ω–∏—è–º –¥–µ–ø–æ–∑–∏—Ç–∞
        depositValues.forEach(value => {
            value.addEventListener('click', function() {
                const val = this.getAttribute('data-value');
                depositSlider.value = val;
                
                // –¢—Ä–∏–≥–≥–µ—Ä–∏–º —Å–æ–±—ã—Ç–∏–µ input –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
                const event = new Event('input');
                depositSlider.dispatchEvent(event);
            });
        });
        
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ—Å—Ç–æ—è–Ω–∏—è –∫–Ω–æ–ø–∫–∏ "–ü–æ–¥–æ–±—Ä–∞—Ç—å"
        function checkFindButton() {
            const findButton = document.getElementById('findButton');
            const allCompleted = Object.values(steps).every(step => step.completed);
            
            if (allCompleted) {
                findButton.disabled = false;
            }
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ "–ü–æ–¥–æ–±—Ä–∞—Ç—å"
        document.getElementById('findButton').addEventListener('click', function() {
            if (!this.disabled) {
                const resultsSection = document.getElementById('resultsSection');
                resultsSection.classList.add('active');
                
                // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º
                setTimeout(() => {
                    resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }, 300);
            }
        });

        // –õ–æ–≥–∏–∫–∞ –∫–∞—Ä—É—Å–µ–ª–∏ —Å —Ü–∏–∫–ª–∏—á–µ—Å–∫–æ–π –ø—Ä–æ–∫—Ä—É—Ç–∫–æ–π
        const cardsContainer = document.getElementById('cardsContainer');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const cardWidth = 340 + 24; // —à–∏—Ä–∏–Ω–∞ –∫–∞—Ä—Ç–æ—á–∫–∏ + gap
        const totalCards = cardsContainer.children.length;
        let currentPosition = 0;

        function scrollToPosition(position) {
            cardsContainer.scrollTo({
                left: position,
                behavior: 'smooth'
            });
        }

        prevBtn.addEventListener('click', () => {
            if (currentPosition === 0) {
                // –ï—Å–ª–∏ –≤ –Ω–∞—á–∞–ª–µ - –ø—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ –∫–æ–Ω—Ü—É
                currentPosition = (totalCards - 1) * cardWidth;
            } else {
                currentPosition -= cardWidth;
            }
            scrollToPosition(currentPosition);
        });

        nextBtn.addEventListener('click', () => {
            const maxPosition = (totalCards - 1) * cardWidth;
            
            if (currentPosition >= maxPosition) {
                // –ï—Å–ª–∏ –≤ –∫–æ–Ω—Ü–µ - –ø—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ –Ω–∞—á–∞–ª—É
                currentPosition = 0;
            } else {
                currentPosition += cardWidth;
            }
            scrollToPosition(currentPosition);
        });

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–æ–∫ "–ó–∞–±—Ä–∞—Ç—å –±–æ–Ω—É—Å"
        document.querySelectorAll('.card-button').forEach(button => {
            button.addEventListener('click', function() {
                // –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ª–æ–≥–∏–∫—É –¥–ª—è –ø–µ—Ä–µ—Ö–æ–¥–∞ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É —Å –±–æ–Ω—É—Å–æ–º
                alert('–ë–æ–Ω—É—Å —É—Å–ø–µ—à–Ω–æ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω! –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É –∫–∞–∑–∏–Ω–æ...');
                // window.location.href = '—Å—Å—ã–ª–∫–∞_–Ω–∞_–∫–∞–∑–∏–Ω–æ';
            });
        });
    </script>
</body>
</html>
